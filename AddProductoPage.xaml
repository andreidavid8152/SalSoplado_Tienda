<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SalSoplado_Tienda.AddProductoPage"
             BackgroundColor="#d9e3f1">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <Label Text="Crea un producto"
                   FontSize="Large"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalTextAlignment="Start"/>

            <Label Text="Nombre" TextColor="Black" FontSize="Medium" FontAttributes="Bold" HorizontalOptions="Start" Margin="0,20,0,-20"/>
            <Entry Placeholder="Nombre del producto" PlaceholderColor="#3b4151"/>

            <Label Text="Descripcion" TextColor="Black" FontSize="Medium" FontAttributes="Bold" HorizontalOptions="Start" Margin="0,10,0,-20"/>
            <Editor Placeholder="Descripción del producto" AutoSize="TextChanges" PlaceholderColor="#3b4151"/>

            <Label Text="Fecha de vencimiento" TextColor="Black" FontSize="Medium" FontAttributes="Bold" HorizontalOptions="Start" Margin="0,10,0,-13"/>
            <DatePicker Format="D" />

            <Label Text="Precio original" TextColor="Black" FontSize="Medium" FontAttributes="Bold" HorizontalOptions="Start" Margin="0,10,0,-13"/>
            <Entry Placeholder="Precio Original" Keyboard="Numeric" PlaceholderColor="#3b4151"/>

            <Label Text="Precio descuento" TextColor="Black" FontSize="Medium" FontAttributes="Bold" HorizontalOptions="Start" Margin="0,10,0,-13"/>
            <Entry Placeholder="Precio con Descuento" Keyboard="Numeric" PlaceholderColor="#3b4151"/>

            <Label Text="Categoria" TextColor="Black" FontSize="Medium" FontAttributes="Bold" HorizontalOptions="Start" Margin="0,10,0,-13"/>
            <Picker Title="Selecciona una categoria">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Frutas</x:String>
                        <x:String>Comida</x:String>
                        <x:String>Flores</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>


            <!-- Imagenes -->
            <Label Text="Imagenes" TextColor="Black" FontSize="Medium" FontAttributes="Bold" HorizontalOptions="Start" Margin="0,10,0,-23"/>

            <FlexLayout x:Name="imagesContainer" 
            Wrap="Wrap" 
            JustifyContent="Center" 
            AlignItems="Center" 
            AlignContent="Center">
            </FlexLayout>

            <Button x:Name="uploadImageButton" 
                    Text="Subir Imagen" 
                    Clicked="OnUploadImageButtonClicked"
                    BackgroundColor="#14282f"
                    TextColor="White"
                    BorderWidth="0"
                    CornerRadius="5"
                    Padding="10,5"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Margin="0,-9,0,25"/>

            <!-- Botón para enviar el formulario -->
            <Button Text="Crear Producto"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>