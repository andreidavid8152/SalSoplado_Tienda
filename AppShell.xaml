<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SalSoplado_Usuario.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SalSoplado_Usuario"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarBackgroundColor="#414960"
    Shell.BackgroundColor="#414960"
    Shell.ForegroundColor="Black"
    Shell.TabBarTitleColor="AntiqueWhite"
    Shell.TabBarForegroundColor="AntiqueWhite">

    <TabBar>
        <Tab Title="Locales" Icon="Images/local.svg">
            <ShellContent ContentTemplate="{DataTemplate local:LocalesPage}" />
        </Tab>
        <Tab Title="Mi perfil" Icon="Images/perfil.svg">
            <ShellContent ContentTemplate="{DataTemplate local:MiPerfilPage}" />
        </Tab>
    </TabBar>

</Shell>
